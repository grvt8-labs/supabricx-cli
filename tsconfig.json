{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Module + Target
    "module": "ESNext",               // ðŸ‘ˆ no nodenext
    "moduleResolution": "node",       // ðŸ‘ˆ classic resolution
    "target": "ES2020",

    // Aliases
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "emitDeclarationOnly": false,

    // JSX (if frontend present)
    "jsx": "react-jsx",

    // Compatibility
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
